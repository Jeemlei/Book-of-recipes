		"@types/jest": "^28.1.4",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"cross-env": "^7.0.3",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^26.5.3",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^28.1.2",
		"prettier": "^2.7.1",
		"supertest": "^6.2.4",
		"ts-jest": "^28.0.5",
		"ts-node": "^10.8.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.7.4"
